# Arquivo de desenvolvimento - copie para .env
DJANGO_SECRET_KEY=dev-secret-key-change-in-production
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1
DJANGO_LOG_LEVEL=DEBUG

# Token do webhook Z-API
ZAPI_WEBHOOK_URL_TOKEN=seu-token-webhook-unico-e-seguro

# Sistema externo para encaminhamento de mensagens
EXTERNAL_SYSTEM_URL=https://seu-sistema.com/api/webhook
EXTERNAL_SYSTEM_TIMEOUT=10

# Retenção de mensagens (em dias) - mensagens mais antigas serão deletadas automaticamente
MESSAGE_RETENTION_DAYS=5

# Consulta de status de carga - URL do sistema externo
CARGA_STATUS_URL=https://seu-sistema.com/consultastatuscarga/
CARGA_STATUS_TIMEOUT=10

# Retenção de logs da API (em dias)
API_REQUEST_LOG_RETENTION_DAYS=7


# Configurações de banco (opcional)
# DATABASE_URL=sqlite:///db.sqlite3

# Configurações de banco PostgreSQL
# Para desenvolvimento local:
# DATABASE_URL=postgresql://usuario:senha@localhost:5432/webhook_db
# Para produção (exemplo com serviços em nuvem):
# DATABASE_URL=postgresql://usuario:senha@host:5432/webhook_db

# CORS - Origens permitidas para consumir a API (separadas por vírgula)
# Formato: http://IP:PORTA ou https://dominio.com
# Exemplos: http://192.168.1.100:3000,https://sistema.com
CORS_ALLOWED_ORIGINS=https://sistema-externo.com,http://IP_DO_CLIENTE